{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "1a examples/world_example.py",
      "type": "python",
      "request": "launch",
      "module": "examples.world_example",
      "justMyCode": false,
      "console": "internalConsole",
      "internalConsoleOptions": "openOnSessionStart",
      "serverReadyAction": {
        "pattern": "Uvicorn running on\\s+(https?://\\S+)",
        "uriFormat": "%s/",
        "action": "debugWithChrome",
        "killOnServerStop": true
      }
    },

    {
      "name": "2a. PyTest (tests/test_hello.py)",
      "type": "python",
      "request": "launch",
      "stopOnEntry": false,
      "module": "pytest",
      "args": [
        "-o log_cli=1",
        "tests/test_hello.py",
        "--headed"
      ],
      "cwd": "${workspaceRoot}",
      "console": "internalConsole",
      "internalConsoleOptions": "openOnSessionStart",
      "justMyCode": false
    },

  ]
}